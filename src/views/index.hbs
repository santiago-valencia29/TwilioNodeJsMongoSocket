<div class="row">
    <div class="col-md-4">
        <form action="/send-sms" method="POST" class="card card-body">
            <div class="form-group">
                <input type="text" name="message" class="form-control" placeholder="Write your message" autofocus>
            </div>
            <div class="form-group">
                <input type="tel" name="phone" class="form-control" placeholder="+0104050806985" autocomplete="off">
            </div>
            <button class="btn btn-primary btn-block">SEND</button>

        </form>
    </div>
    <div class="col-md-8" >

        {{#if messages}}
      <ul class="list-group" style="height: 70vh; overflow-y: auto;">
          
            {{#each messages}}
              {{!-- 
                  <span>{{hideNumber To}}</span>--}}
              <div class="list-group-item list-group-item-ligth list-group-item-action">
                  <p>{{Body}}</p>
                  <span>{{ To}}</span>
                    <span>{{ From}}</span>

              </div>
            {{/each}}
      </ul>
        {{else}}
        <p>No messages yer</p>
        {{/if}}
    </div>
</div>